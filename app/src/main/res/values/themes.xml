<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.SelfAlarmProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/anime_primary_blue</item>
        <item name="colorPrimaryVariant">@color/anime_primary_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/anime_accent_pink</item>
        <item name="colorSecondaryVariant">@color/anime_accent_light_pink</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background colors and text -->
        <item name="android:colorBackground">@color/anime_background_soft_gray</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/anime_text_dark</item>
        <item name="android:textColorPrimary">@color/anime_text_dark</item>
        <item name="android:textColorSecondary">@color/anime_text_light</item>

        <!-- Status bar styling -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>

        <!-- Touch effects -->
        <item name="colorControlHighlight">@color/anime_accent_light_pink</item>
        <item name="android:colorControlHighlight">@color/anime_accent_light_pink</item>

        <!-- UI components styling -->
        <item name="materialCardViewStyle">@style/Widget.SelfAlarm.CardView</item>
        <item name="materialButtonStyle">@style/Widget.SelfAlarm.Button</item>
        <item name="switchStyle">@style/Widget.SelfAlarm.Switch</item>
        <item name="toolbarStyle">@style/Widget.SelfAlarm.Toolbar</item>
        <item name="bottomNavigationStyle">@style/Widget.SelfAlarm.BottomNavigationView</item>
        <item name="sliderStyle">@style/Widget.SelfAlarm.Slider</item>
        <item name="checkboxStyle">@style/Widget.SelfAlarm.CheckBox</item>
        <item name="radioButtonStyle">@style/Widget.SelfAlarm.RadioButton</item>
        <item name="tabStyle">@style/Widget.SelfAlarm.TabLayout</item>
        <item name="textInputStyle">@style/Widget.SelfAlarm.TextInputLayout.OutlinedBox</item>
        <item name="floatingActionButtonStyle">@style/Widget.SelfAlarm.FloatingActionButton</item>
        
        <!-- Dialog and alert theming -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.SelfAlarm.MaterialAlertDialog</item>
    </style>

    <!-- Text Appearance styles -->
    <style name="TextAppearance.SelfAlarm.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/anime_primary_blue</item>
    </style>

    <style name="TextAppearance.SelfAlarm.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/anime_text_light</item>
    </style>

    <style name="TextAppearance.SelfAlarm.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/anime_text_dark</item>
    </style>

    <!-- Main theme -->
    <style name="Theme.SelfAlarmProject" parent="Base.Theme.SelfAlarmProject">
        <!-- Animations for activity transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>
    </style>

    <style name="TextAppearance.App.Toolbar.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.SchedulerManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>