<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for dark mode -->
    <style name="Base.Theme.SelfAlarmProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/dark_anime_primary_blue</item>
        <item name="colorPrimaryVariant">@color/dark_anime_primary_dark_blue</item>
        <item name="colorOnPrimary">@color/dark_surface_highlight</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/dark_anime_accent_pink</item>
        <item name="colorSecondaryVariant">@color/dark_anime_accent_light_pink</item>
        <item name="colorOnSecondary">@color/dark_surface_highlight</item>

        <!-- Background colors and text -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_anime_text_light</item>
        <item name="android:textColorPrimary">@color/dark_anime_text_light</item>
        <item name="android:textColorSecondary">@color/dark_anime_text_secondary</item>

        <!-- Status bar styling -->
        <item name="android:statusBarColor">@color/dark_status_bar</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/dark_nav_bar</item>

        <!-- Touch effects -->
        <item name="colorControlHighlight">@color/dark_anime_accent_light_pink</item>
        <item name="android:colorControlHighlight">@color/dark_anime_accent_light_pink</item>

        <!-- UI components styling -->
        <item name="materialCardViewStyle">@style/Widget.SelfAlarm.Dark.CardView</item>
        <item name="materialButtonStyle">@style/Widget.SelfAlarm.Dark.Button</item>
        <item name="switchStyle">@style/Widget.SelfAlarm.Dark.Switch</item>
        <item name="toolbarStyle">@style/Widget.SelfAlarm.Toolbar.Dark</item>
        <item name="bottomNavigationStyle">@style/Widget.SelfAlarm.BottomNavigationView.Dark</item>
        <item name="sliderStyle">@style/Widget.SelfAlarm.Slider.Dark</item>
        <item name="checkboxStyle">@style/Widget.SelfAlarm.CheckBox.Dark</item>
        <item name="radioButtonStyle">@style/Widget.SelfAlarm.RadioButton.Dark</item>
        <item name="tabStyle">@style/Widget.SelfAlarm.TabLayout.Dark</item>
        <item name="textInputStyle">@style/Widget.SelfAlarm.TextInputLayout.OutlinedBox.Dark</item>
        <item name="floatingActionButtonStyle">@style/Widget.SelfAlarm.FloatingActionButton.Dark</item>
        
        <!-- Dialog and alert theming -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.SelfAlarm.Dark.MaterialAlertDialog</item>
        
        <!-- Bottom sheet styling -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.SelfAlarm.Dark.BottomSheetDialog</item>
    </style>

    <!-- Text Appearance styles for dark theme -->
    <style name="TextAppearance.SelfAlarm.Dark.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/dark_anime_primary_blue</item>
    </style>

    <style name="TextAppearance.SelfAlarm.Dark.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/dark_anime_text_light</item>
    </style>

    <style name="TextAppearance.SelfAlarm.Dark.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/dark_anime_text_light</item>
    </style>
</resources>